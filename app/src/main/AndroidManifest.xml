<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.artyhacker.popularmovies">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MovieListActivity"
            android:label="@string/app_name"
            android:theme="@style/MovieTheme"
            android:launchMode="singleTop">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".DetailActivity"
            android:label="@string/movie_details_title"
            android:parentActivityName=".MovieListActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".MovieListActivity" />
        </activity>
        <activity
            android:name=".SettingActivity"
            android:label="@string/title_activity_setting"
            android:parentActivityName=".MovieListActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".MovieListActivity" />
        </activity>

        <service android:name=".service.MovieService"/>
        <service android:name=".service.DetailService"/>
        <receiver android:name=".service.MovieService$AlarmReceiver"/>

        <provider
            android:name=".provider.MovieProvider"
            android:authorities="com.artyhacker.popularmovies"
            android:enabled="true"
            android:exported="true"
            android:permission="com.artyhacker.LICENSE_TO_KILL"></provider>


    </application>

    <permission android:name="com.artyhacker.LICENSE_TO_KILL"
        android:protectionLevel="dangerous"
        android:label="Licenced to Kill">

    </permission>

</manifest>